<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>solaris</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/msdemo-zuul-gateway/bin</directory>
			<outputDirectory>msdemo-zuul-gateway/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
				<include>msdemo-zuul-gateway</include>
				<include>wrapper-linux*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/msdemo-zuul-gateway/lib</directory>
			<outputDirectory>msdemo-zuul-gateway/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
				<include>libwrapper-solaris*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/msdemo-zuul-gateway/conf</directory>
			<outputDirectory>msdemo-zuul-gateway/conf</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>msdemo-zuul-gateway/conf</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>logs</directory>
			<outputDirectory>msdemo-zuul-gateway/logs</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>

</assembly>
